<plugin resizable="true">
	<vbox spacing="4">
		<!-- IR editor -->
		<group text="groups.impulse_response">
			<vbox>
				<!-- File editor -->
				<hbox spacing="4">
					<label text="labels.fft.frame" />
					<combo id="fft" />
					<label text="labels.file" />
					<combo id="fsel" />
					<label text="labels.ir_equalizer" />
					<button id="wpp" color="green" led="true" />
					<label text="labels.flt.show_" />
					<button id="eqv" color="yellow" led="true" />
					<void hexpand="true" />
				</hbox>
				
				<ui:for id="i" first="0" last="1">
					<asample expand="true"
						id="ifn${i}"
						mesh_id="ifd${i}"
						path_id="_ui_dlg_ir_path"
						hcut=":ihc${i}"
						tcut=":itc${i}"
						fadein=":ifi${i}"
						fadeout=":ifo${i}"
						length=":ifl${i}"
						status=":ifs${i}"
						width.min="600" height.min="128"
						clipboard.head_cut="ihc${i}"
						clipboard.tail_cut="itc${i}"
						clipboard.fade_in="ifi${i}"
						clipboard.fade_out="ifo${i}"
						format="audio_lspc,audio,all"
						visibility=":fsel ieq ${i}"
					/>
				</ui:for>
	
				<hbox>
					<grid rows="5" cols="5" expand="true">
						<label text="labels.sedit.head_cut" />
						<label text="labels.sedit.tail_cut" />
						<label text="labels.sedit.fade_in" />
						<label text="labels.sedit.fade_out" />
						<label text="labels.listen" />
						
						<knob id="ihc0" size="20" />
						<knob id="itc0" size="20" />
						<knob id="ifi0" size="20" scolor="yellow" />
						<knob id="ifo0" size="20" scolor="yellow" />
						<button id="ils0" size="32" toggle="false" />
						
						<value id="ihc0" />
						<value id="itc0" />
						<value id="ifi0" />
						<value id="ifo0" />
						<led id="ils0" color="green" />
						
						<knob id="ihc1" size="20" />
						<knob id="itc1" size="20" />
						<knob id="ifi1" size="20" scolor="yellow" />
						<knob id="ifo1" size="20" scolor="yellow" />
						<button id="ils1" size="32" toggle="false" />
						
						<value id="ihc1" />
						<value id="itc1" />
						<value id="ifi1" />
						<value id="ifo1" />
						<led id="ils1" color="green" />
					</grid>
					
					<vsep />
					
					<grid rows="5" cols="1" expand="true">
						<label text="labels.source" />
						<combo id="cs_l" />
						<hbox fill="false">
							<led id="ca_l" color="left_channel" />
							<label text="labels.active" />
						</hbox>
						<combo id="cs_r" />
						<hbox fill="false">
							<led id="ca_r" color="right_channel" />
							<label text="labels.active" />
						</hbox>
					</grid>
					<vsep />
					
					<grid rows="5" cols="2" expand="true">
						<label text="labels.predelay" />
						<label text="labels.makeup" />
						
						<knob id="pd_l" />
						<knob id="mk_l" />
						
						<value id="pd_l" />
						<value id="mk_l" />
						
						<knob id="pd_r" />
						<knob id="mk_r" />
						
						<value id="pd_r" />
						<value id="mk_r" />
					</grid>
					<vsep />
					<grid rows="3" cols="2" expand="true">
						<label text="labels.signal.dry" scolor="yellow" />
						<label text="labels.signal.wet" scolor="yellow" />
						
						<knob id="dry" />
						<knob id="wet" />
						
						<value id="dry" />
						<value id="wet" />
					</grid>
					<vsep />
					<grid rows="3" cols="1" expand="true">
						<label text="labels.output" />
						<knob id="g_out" />
						<value id="g_out" />
					</grid>
				</hbox>
			</vbox>
		</group>

		<!-- Wet equalization -->
		<group text="groups.wet_signal_eq" visibility=":eqv">
			<grid rows="5" cols="10">
				<ui:attributes bright="(:wpp) ? 1 : 0.5">
					<label text="labels.flt.low_cut" />
					<label text="50" />
					<label text="107" />
					<label text="227" />
					<label text="484" />
					<label text="labels.flt.1k" />
					<label text="labels.flt.2_2k" />
					<label text="labels.flt.4_7k" />
					<label text="labels.flt.10k" />
					<label text="labels.flt.high_cut" />
					
					<combo id="lcm" />
					<ui:for id="f" first="0" last="7"> 
						<cell rows="3"><fader id="eq_${f}" angle="1" bright="(:wpp) ? 1 : 0.5"/></cell>
					</ui:for>
					<combo id="hcm" />
					
					<label text="labels.frequency" />
					<label text="labels.frequency" />
					
					<knob id="lcf" />
					<knob id="hcf" />
					
					<value id="lcf" />
					<ui:for id="f" first="0" last="7">
						<value id="eq_${f}" bright="(:wpp) ? 1 : 0.5" />
					</ui:for>
					<value id="hcf" />
				</ui:attributes>
			</grid>
		</group>
	</vbox>
</plugin>